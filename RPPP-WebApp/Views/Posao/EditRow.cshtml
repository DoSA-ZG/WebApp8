@model RPPP_WebApp.Models.Posao

<tr hx-target="this" hx-swap="outerHTML">
                  
                    <th scope="row">
                        @Model.PosaoId
                    
                     </th>
                
                <td> 
                                <label asp-for = "Opis"></label>
                    <div><span asp-validation-for="Opis" class =" text-danger"></span></div>
                    <input asp-for="Opis" class="form-control" />
                </td>
                <td>
                    <label asp-for = "ProjektId"></label>
                    <div><span asp-validation-for="ProjektId" class="text-danger"></span></div>
                    <select asp-for="ProjektId" asp-items="ViewBag.Projekti" class="form-control mt-2">
                        <option value="0" selected>Odaberite projekt</option>
                    </select>
                <td>
                     <label asp-for = "VrstaPoslaId"></label>
                        <div><span asp-validation-for="VrstaPoslaId" class="text-danger"></span></div>
                        <select asp-for="VrstaPoslaId" asp-items="ViewBag.VrstePosla" class="form-control mt-2">
                            <option value="0" selected>Odaberite vrstu posla</option>
                        </select>
                </td>

            <td>
                  
                    <input type="hidden" asp-for="PosaoId" />
                   <button
                         hx-include="closest tr"
                         hx-post='@Url.Action("EditRow", "Posao")'
                        class="btn btn-success mt-1" title="Spremi" 
                        style="background-color: #198754 !important;"> Spremi </button>

                     <button 
                     style="background-color: rgb(187, 23, 23), 25, 25) !important;"
                         hx-get='@Url.Action("Get", "Posao", new {id = Model.PosaoId})' title="Odustani" class="btn btn-secondary mt-1"> Odustani </button>
                 
            </td>
            
            </tr>