@model ZahtjevInfoViewModel
@{
	ViewBag.Title = "Zahtjev br. " + Model.ZahtjevId;
}

<div class="container">
    <div class="row text-center">
        <div class="col-sm-2">
            @if (ViewBag.Previous != null)
            {
                        <a class="btn btn-sm btn-primary"
                           asp-action="Show"
                           asp-route-page="@ViewBag.Page"
                           asp-route-sort="@ViewBag.Sort"
                           asp-route-ascending="@ViewBag.Ascending"
                           asp-route-filter="@ViewBag.Filter"
                           asp-route-position="@(ViewBag.Position - 1)"
                           asp-route-id="@ViewBag.Previous">
                           Prethodni
                        </a>
            }
        </div>
        <div class="col-sm-8">
            <h4>
                Zahtjev br. @Model.ZahtjevId | @Model.Oznaka | @Model.NazivProjekta
            </h4>
        </div>
        <div class="col-sm-2">
            @if (ViewBag.Next != null)
            {
                        <a class="btn btn-sm btn-primary" asp-action="Show"
                           asp-route-page="@ViewBag.Page"
                           asp-route-sort="@ViewBag.Sort"
                           asp-route-ascending="@ViewBag.Ascending"
                           asp-route-filter="@ViewBag.Filter"
                           asp-route-position="@(ViewBag.Position + 1)"
                           asp-route-id="@ViewBag.Next">
                           Sljedeći
                        </a>
            }
        </div>
    </div>

    <div class="row justify-content-sm-center">
        <div class="col-sm-2">

        </div>
        <div class="col-sm-2">

        </div>
        <div class="col-sm-1 text-right">
            <a asp-action="Edit"
               asp-route-id="@Model.ZahtjevId"
               target="_blank"
               class="btn btn-warning btn-sm" title="Ažuriraj">Uredi</a>
        </div>
        <form asp-action="Delete" method="post"
              asp-route-page="@ViewBag.Page"
              asp-route-sort="@ViewBag.Sort"
              asp-route-ascending="@ViewBag.Ascending"
              asp-route-filter="@ViewBag.Filter">
            <input type="hidden" name="ZahtjevId" value="@Model.ZahtjevId" />
            <button type="submit" class="btn btn-sm btn-danger delete" title="Obriši">Obriši</button>
        </form>
        <div class="col-sm-1 text-left">
            <a class="btn btn-sm btn-primary cancel"
               asp-action="Index"
               asp-route-page="@ViewBag.Page"
               asp-route-sort="@ViewBag.Sort"
               asp-route-ascending="@ViewBag.Ascending"
               asp-route-filter="@ViewBag.Filter"
               title="Povratak na popis zahtjeva">
                Povratak nazad
            </a>
        </div>
    </div>

    <div class="col-sm-10">
        <partial name="Zadatci" model="Model.Zadatci" />
    </div>
</div>


@section styles{
        <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
}


@section scripts{
        <partial name="IncludeValidation" />
        <script src="~/lib/jqueryui/jquery-ui.js"></script>
        <script src="~/js/autocomplete.js" asp-append-version="true"></script>
        <script src="~/js/zahtjevi.js" asp-append-version="true"></script>
}
